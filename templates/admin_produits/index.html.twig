{% extends 'base.html.twig' %}

{% block title %}Produits index
{% endblock %}

{% block body %}

	
	<div class="catshow">

		<h1>Produits de Plushy Animals</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Image</th>
					<th>Nom</th>
					<th>Prix</th>
					<th>Description</th>
					<th>Marque</th>
					<th>Reference</th>
					<th>Age</th>
					<th>Genre</th>
					<th>Entretien</th>
					<th>Date</th>
					<th>Catégorie</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td>{{ produit.id }}</td>
						<td>
							<img src={{ asset('uploads/' ~ produit.imageFilename )}} width="120%" height="245px"/>
						</td>
						<td>{{ produit.nom }}</td>
						<td>{{ produit.prix }}</td>
						<td>{{ produit.description }}</td>
						<td>{{ produit.marque }}</td>
						<td>{{ produit.reference }}</td>
						<td>{{ produit.age }}</td>
						<td>{{ produit.genre }}</td>
						<td>{{ produit.entretien }}</td>					
						<td>{{ produit.category }}</td>
						<td>
							<a href="{{ path('app_admin_produits_show', {'id': produit.id}) }}">show</a>
							<a href="{{ path('app_admin_produits_edit', {'id': produit.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">Pas de produits trouvés</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_produits_new') }}">Create new</a>

		<div class="container d-flex justify-content-center align-items-center mb-8">
			{{ knp_pagination_render(produits) }}
		</div>

	</div>

{% endblock %}
