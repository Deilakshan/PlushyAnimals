{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

<div class="container">

    <div class="catshow">

        <h1>Produits</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <img src= {{ asset('uploads/' ~ produit.imageFilename )}} width="25%" height="425px"/>
                    </td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ produit.nom }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ produit.prix }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ produit.description }}</td>
                </tr>
                <tr>
                    <th>Marque</th>
                    <td>{{ produit.marque }}</td>
                </tr>
                <tr>
                    <th>Reference</th>
                    <td>{{ produit.reference }}</td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>{{ produit.age }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ produit.genre }}</td>
                </tr>
                <tr>
                    <th>Entretien</th>
                    <td>{{ produit.entretien }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ produit.createdAt }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_produits_index') }}">back to list</a>

        <a href="{{ path('app_admin_produits_edit', {'id': produit.id}) }}">edit</a>

        {{ include('admin_produits/_delete_form.html.twig') }}
        
    </div>

</div>

{% endblock %}
