{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}


	<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src={{asset("media/homeback.jpg")}} class="d-block w-100" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<h2>Un nouveau membre dans la famille</h2>
					<p>Découvrez la référence en matière de douceur</p>
                    <div class="slider-btn">
						<a class="btn" role="button" href={{path("app_renard_index")}}>Voir plus</a>
					</div>
				</div>
			</div>
			<div class="carousel-item">
				<img src={{asset("media/homeback2.jpg")}} class="d-block w-100" alt="...">
				<div class="carousel-caption">
					<h2>Prêt à adopter ?</h2>
					<p>Nos peluches retournent tout l'amour qu'elles reçoivent</p>
                    <div class="slider-btn">
						<a class="btn" role="button" href={{path("app_renard_index")}}>Voir plus</a>
					</div>
				</div>
			</div>

		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>


	{# <div class="color-overlay d-flex justify-content-center align-items-center">Best Prices This Season</div> #}


{% endblock %}
