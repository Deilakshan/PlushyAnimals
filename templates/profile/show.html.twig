{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="container bob text-white min-vh-100 d-flex justify-content-center align-items-center">

		<div class="ensemble">

            <h1>User</h1>

            <table class="table text-white">
                <tbody>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                </tbody>
            </table>


            <a href="{{ path('app_profile_edit') }}" class="btn btn-warning">edit</a>

        </div>

    </div>

{% endblock %}
